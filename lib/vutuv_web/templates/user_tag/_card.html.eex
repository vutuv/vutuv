<section class="card">
  <h2><%= gettext "User tags" %></h2>

  <ul class="tags">
    <%= for user_tag <- @user_tags do %>
      <li>
        <button>
          <%= user_tag.tag.name %>
          <%= Enum.count(user_tag.user_tag_endorsements) %>
        </button>
      </li>
    <% end %>
  </ul>

  <span><%= link gettext("All user tags"), to: Routes.user_tag_path(@conn, :index, @user) %></span>
</section>
