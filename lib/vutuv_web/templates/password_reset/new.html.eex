<h1><%= gettext "Reset password" %></h1>

<p><%= gettext "A code has been sent to your email address. Enter that code below." %></p>

<%= form_for @conn, Routes.password_reset_path(@conn, :create), [as: :password_reset], fn f -> %>
  <%= if f.errors != [] do %>
    <div class="alert alert-danger">
      <p><%= gettext "Something went wrong. Please check the errors below." %></p>
    </div>
  <% end %>

  <%= label f, :code, gettext("Code") %>
  <%= number_input f, :code, max: "999999" %>
  <%= error_tag f, :code %>

  <%= hidden_input f, :email, value: @email %>

  <div>
    <%= submit gettext("Continue") %>
  </div>
<% end %>
