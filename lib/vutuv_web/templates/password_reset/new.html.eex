<h2>Reset Password</h2>

<%= form_for @conn, Routes.password_reset_path(@conn, :create), [as: :password_reset], fn f -> %>
  <%= if f.errors != [] do %>
    <div class="alert alert-danger">
      <p>Please check the errors below:</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

  <div>
    <%= submit "Reset password", class: "btn btn-primary" %>
  </div>
<% end %>

<span><%= link "Back", to: Routes.user_path(@conn, :new) %></span>
