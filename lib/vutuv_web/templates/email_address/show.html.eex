<h1>Show email address</h1>

<ul>

  <li>
    <strong><%= gettext "User:" %></strong>
    <%= @email_address.user_id %>
  </li>

  <li>
    <strong><%= gettext "Value:" %></strong>
    <%= @email_address.value %>
  </li>

  <li>
    <strong><%= gettext "Description:" %></strong>
    <%= @email_address.description %>
  </li>

  <li>
    <strong><%= gettext "is public:" %></strong>
    <%= @email_address.is_public %>
  </li>

  <li>
    <strong><%= gettext "Position:" %></strong>
    <%= @email_address.position %>
  </li>

  <li>
    <strong><%= gettext "Verified:" %></strong>
    <%= @email_address.verified %>
  </li>

</ul>

<span><%= link gettext("Edit"), to: Routes.user_email_address_path(@conn, :edit, @current_user, @email_address) %></span>
<span><%= link gettext("Back"), to: Routes.user_path(@conn, :show, @current_user) %></span>
