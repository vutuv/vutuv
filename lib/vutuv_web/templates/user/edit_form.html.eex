<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p><%= gettext "Something went wrong. Please check the errors below." %></p>
    </div>
  <% end %>

  <%= inputs_for f, :profile, fn fp -> %>
    <%= label fp, :full_name, gettext("Full name") %>
    <%= text_input fp, :full_name %>
    <%= error_tag fp, :full_name %>

    <%= label fp, :preferred_name, gettext("Preferred name")  %>
    <%= text_input fp, :preferred_name %>
    <%= error_tag fp, :preferred_name %>

    <%= label fp, :honorific_prefix, gettext("Honorific prefix") %>
    <%= text_input fp, :honorific_prefix %>
    <%= error_tag fp, :honorific_prefix %>

    <%= label fp, :honorific_suffix, gettext("Honorific suffix") %>
    <%= text_input fp, :honorific_suffix %>
    <%= error_tag fp, :honorific_suffix %>

    <%= label fp, :gender, gettext("Gender") %>
    <%= select fp, :gender, [{gettext("Female"), "female"}, {gettext("Male"), "male"}, {gettext("Other"), "other"}] %>
    <%= error_tag fp, :gender %>

    <%= label fp, :birthday, gettext("Date of birth") %>
    <%= date_select fp, :birthday, year: [options: 1900..2020, selected: 1980], month: [
      options: [
        {gettext("January"), "1"},
        {gettext("February"), "2"},
        {gettext("March"), "3"},
        {gettext("April"), "4"},
        {gettext("May"), "5"},
        {gettext("June"), "6"},
        {gettext("July"), "7"},
        {gettext("August"), "8"},
        {gettext("September"), "9"},
        {gettext("October"), "10"},
        {gettext("November"), "11"},
        {gettext("December"), "12"},
      ]
    ] %>
    <%= error_tag fp, :birthday %>

    <%= label fp, :locale, gettext("Locale") %>
    <%= text_input fp, :locale %>
    <%= error_tag fp, :locale %>

    <%= label fp, :avatar, gettext("Avatar") %>
    <%= file_input fp, :avatar %>
    <%= error_tag fp, :avatar %>

    <%= label fp, :active_slug, gettext("Active slug") %>
    <%= text_input fp, :active_slug %>
    <%= error_tag fp, :active_slug %>

    <%= label fp, :headline, gettext("Headline") %>
    <%= text_input fp, :headline %>
    <%= error_tag fp, :headline %>

    <%= label fp, :noindex?, gettext("No index?") %>
    <%= checkbox fp, :noindex? %>
    <%= error_tag fp, :noindex? %>
  <% end %>

  <div>
    <%= submit gettext("Save") %>
  </div>
<% end %>
