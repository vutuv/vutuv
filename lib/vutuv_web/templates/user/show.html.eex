<h2><%= gettext "Show user" %></h2>

<div>
  <h3><%= gettext "Profile" %></h3>
  <ul>
    <li>
      <strong><%= gettext "Full name:" %></strong>
      <%= @profile.full_name %>
    </li>

    <li>
      <strong><%= gettext "Preferred name:" %></strong>
      <%= @profile.preferred_name %>
    </li>

    <li>
      <strong><%= gettext "Honorific prefix:" %></strong>
      <%= @profile.honorific_prefix %>
    </li>

    <li>
      <strong><%= gettext "Honorific suffix:" %></strong>
      <%= @profile.honorific_suffix %>
    </li>

    <li>
      <strong><%= gettext "Gender:" %></strong>
      <%= @profile.gender %>
    </li>

    <li>
      <strong><%= gettext "Date of birth" %></strong>
      <%= @profile.birthday %>
    </li>

    <li>
      <strong><%= gettext "Locale:" %></strong>
      <%= @profile.locale %>
    </li>

    <li>
      <strong><%= gettext "Avatar:" %></strong>
      <img src="<%= Vutuv.Avatar.url({@profile.avatar, @profile}) %>"/>
    </li>

    <li>
      <strong><%= gettext "Headline:" %></strong>
      <%= @profile.headline %>
    </li>

    <li>
      <strong><%= gettext "Noindex?:" %></strong>
      <%= @profile.noindex? %>
    </li>

  </ul>

  <span><%= link gettext("Edit profile"), to: Routes.user_path(@conn, :edit, @user) %></span><br>
</div>

<div>
  <h3><%= gettext "Email addresses" %></h3>

  <%= for email_address <- @user.email_addresses do %>
    <tr>
      <td><%= email_address.value %></td>
      <td><%= link gettext("Edit email address"), to: Routes.user_email_address_path(@conn, :edit, @user, email_address) %></td>
    </tr>
  <% end %>

  <span><%= link gettext("New email address"), to: Routes.user_email_address_path(@conn, :new, @user) %></span>
</div>
